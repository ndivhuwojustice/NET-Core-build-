        {/* Contact information */}
        <div className="prose font-custom text-xs text-muted-foreground flex flex-col @xl:flex-row gap-2 items-start @xl:items-center">
          <span className="font-custom">
            Email:{" "}
            {/* Clicking opens mail client as requested */}
            <a href="mailto:ndivhuwoj22@gmail.com" className="underline hover:text-foreground">
