                href={sponsorLink}
                target="_blank"
                rel="noopener noreferrer"
                className="flex items-center gap-2 text-muted-foreground hover:text-foreground transition-colors font-custom text-sm"
              >
                {Lucide.HeartHandshake && <Lucide.HeartHandshake size={16} className="text-current" />} Sponsor Page
              </a>
